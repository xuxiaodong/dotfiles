GtkScrolledWindow::scrollbar-spacing = 0 # 0 pixels between gtklist and scrollbar
  GtkRange::trough_border                = 0
  GtkRange::slider_width                = 15
  GtkRange::stepper_size                = 0
  GtkScrollbar::has-backward-stepper 		= 0
  #GtkScrollbar::has-secondary-backward-stepper 	= 1
  GtkScrollbar::has-forward-stepper		= 0
  #GtkScrollbar::has-secondary-forward-stepper	= 1
  GtkButton      ::default_border    = { 0, 0, 0, 0 }
  GtkRange       ::trough_border     = 0
  GtkPaned       ::handle_size       = 6
  GtkRange       ::slider_width      = 10
  GtkRange       ::stepper_size      = 5

  GtkScrollbar   ::min_slider_length = 20
  GtkCheckButton ::indicator_size    = 14
  GtkMenuBar     ::internal-padding  = 0
  GtkTreeView    ::expander_size     = 14
  GtkExpander    ::expander_size     = 16
  GtkScale       ::slider-length     = 24
  
  xthickness = 1
  ythickness = 1

  fg[NORMAL]        = "#5a504f" # Metacity and mouseover, Most text
  fg[PRELIGHT]      = "#00C0E4"
  fg[ACTIVE]        = "#333333"
  fg[SELECTED]      = "#ffffff"
  fg[INSENSITIVE]   = "#A2A2A2"

  bg[NORMAL]        = "#f4f2f3" # Normal Background
  bg[PRELIGHT]      = "#f4f2f3" # Expand prelight bg
  bg[ACTIVE]        = "#f4f2f3" 
  bg[SELECTED]	    = "#5a504f" 
  bg[INSENSITIVE]   = "#f4f2f3"

  base[NORMAL]      = "#f4f2f3" # Background, most
  base[PRELIGHT]    = "#6590b8" 
  base[ACTIVE]      = "#f4f2f3" # Menu active item in inactive window
  base[SELECTED]    = "#5a504f" # Highlited Background
  base[INSENSITIVE] = "#f4f2f3" # Inactive Entry bg

  text[NORMAL]      = "#5a504f" # Text in window, arrows
  text[PRELIGHT]    = "#00C0E4" # Text on Mouseover
  text[ACTIVE]      = "#00C0E4" # Active text in inactive window
  text[SELECTED]    = "#00C0E4" # Highlighted Text
  text[INSENSITIVE] = "#A2A2A2" # Insensitive arrows

  engine "murrine" 
  {
#	 scrollbar_color     		 = "#f4f2f3"
#	 contrast 			 = 0.3
#	 glazestyle 			 = 0 # 0 = flat hilight, 1 = curved hilight
#	 menubarstyle        		 =  # 0 = flat, 1 = glass, 2 = gradient
#	 menubaritemstyle	   	 = 0 # 0 = menuitem look, 1 = button look
#	 listviewheaderstyle 		 = 1 # 0 = flat, 1 = glass
#	 animation           		 = TRUE
	menuitemstyle = 2 # 0 = flat, 1 = glassy, 2 = striped
	scrollbar_color = "#acacac"
	scrollbarstyle = 3
	contrast = 1.5
	menustyle = 0
	glazestyle = 0 # 0 = flat hilight, 1 = curved hilight, 2 = concave style
	menubarstyle = 0 # 0 = flat, 1 = glassy, 2 = gradient, 3 = striped
	menubaritemstyle = 0 # 0 = menuitem look, 1 = button look
	menuitemstyle = 2 # 0 = flat, 1 = glassy, 2 = striped
	listviewheaderstyle = 1 # 0 = flat, 1 = glassy
	roundness = 0 # 0 = squared, 1 = old default, more will increase roundness
    	animation = TRUE # FALSE = disabled, TRUE = enabled
 	
      hilight_ratio = 1.2
        gradients = FALSE
        listviewstyle = 1
  }
}

